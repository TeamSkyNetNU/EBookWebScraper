<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="databaseProject.UserInterfaceController">
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
        <content>
          <AnchorPane>
               <children>
                  <ListView fx:id="dataListView" layoutX="6.0" prefHeight="1000.0" prefWidth="720.0" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </center>
   <left>
      <VBox alignment="CENTER" prefHeight="550.0" prefWidth="170.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="showDataButton" mnemonicParsing="false" onAction="#showData" text="Show Data">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Button>
            <VBox alignment="CENTER_LEFT" prefHeight="150.0" prefWidth="100.0">
               <children>
                  <RadioButton fx:id="amazonRadioButton" mnemonicParsing="false" text="Amazon Books">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="websiteToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="ebayRadioButton" mnemonicParsing="false" text="Ebay Books" toggleGroup="$websiteToggleGroup">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="barnesRadioButton" mnemonicParsing="false" text="Barnes &amp; Noble" toggleGroup="$websiteToggleGroup">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </RadioButton>
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </left>
</BorderPane>
